<main>
    <section id="create-page">
        <div class="create-container">
            <div class="box-image"></div>

            <h2 class="box-heading"> Add new home</h2>


            <form class="form" action="/housing/create" method="post">
                {{#if err}}
                    <div>
                        <div class="errorContainer">
                            <p>{{err.message}}</p>
                        </div>
                    </div>
                {{/if}}
                <div class="input">
                    <input type="text" class="input-field" id="notice" placeholder="Real House Luxury Villa..." name="notice"
                           value="{{ctx.notice}}"/>
                    <label class="notice">Notice:</label>
                </div>
                <div class="input">
                    <input type="text" class="input-field" id="type" placeholder="Villa..." name="type" value="{{ctx.type}}"/>
                    <label class="type">Property Type:</label>
                </div>
                <div class="input">
                    <input type="number" class="input-field" id="year" placeholder="2018..." name="year" value="{{ctx.year}}"/>
                    <label class="year">Year Built:</label>
                </div>
                <div class="input">
                    <input type="text" class="input-field" id="city" placeholder="Sofia..." name="city" value="{{ctx.city}}"/>
                    <label class="city">City</label>
                </div>

                <div class="input">
                    <input type="text" class="input-field" id="homeImage" placeholder="Image..." name="homeImageUrl" value="{{ctx.homeImageUrl}}"/>
                    <label class="homeImage">Home Image:</label>
                </div>

                <div class="input">
                    <input type="text" class="input-field" id="description" placeholder="Description..." name="propertyDescription"
                           value="{{ctx.propertyDescription}}"/>
                    <label class="description">Property Description:</label>
                </div>

                <div class="input">
                    <input type="number" class="input-field" id="availablePieces" placeholder="1" name="availablePieces" value="{{ctx.availablePieces}}"/>
                    <label class="availablePieces">Available pieces:</label>
                </div>

                <div class="create-action">
                    <button class="create-button">Add</button>
                </div>


            </form>
        </div>
    </section>

</main>
