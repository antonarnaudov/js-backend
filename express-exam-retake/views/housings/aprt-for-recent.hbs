<main>

    <section id="all-listings">
        <h1>Apartments for recents</h1>
        <!-- If there are offers for housing in the database display each of them -->
        {{#each housing}}
            <div class="card">
                <h3>{{this.notice}}</h3>
                <p>{{this.propertyDescription}}</p>

                <div class="cta-container"><a href="/housing/details/{{this._id}}" class="det-link">Details</a></div>
                <div class="card_circle"><img src="{{this.homeImageUrl}}"></div>

            </div>

        {{else}}
            <!-- If there are still no offers for housing in the database display: -->
            <div class="no-data-listing">
                <p class="no-offer">There are no housing offers found...</p>
            </div>
        {{/each}}
    </section>
</main>

