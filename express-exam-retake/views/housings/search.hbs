<main>
    <form class="search" action="/search" method="post">
        <input type="search" name="search" placeholder="Search here...">
        <button type="submit">Search</button>
    </form>
    <section id="find-section">

        <!-- If there are any matching matches from the search, show each of them -->
        {{#each housing}}
            <div class="card">
                <h3>{{this.notice}}</h3>
                <p>{{this.propertyDescription}}</p>
                <div class="cta-container"><a href="/housing/details/{{this._id}}" class="det-link">Details</a></div>
                <div class="card_circle"><img src="{{this.homeImageUrl}}"></div>

            </div>
        {{else}}
            <!-- If there are no search matches, show: -->
            <div class="no-data-listing">
                <p class="no-offer">No match was found for the submitted type...</p>
            </div>
        {{/each}}
    </section>
</main>
