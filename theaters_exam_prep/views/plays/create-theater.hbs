<main>
    <form class="theater-form" action="/play/create" method="POST">
        {{#if err}}
            <section class="notifications error">
                <p>{{err.message}}</p>
            </section>
        {{/if}}
        <h1>Create Theater</h1>
        <div>
            <label for="title">Theater Title:</label>
            <input id="title" name="title" type="text" placeholder="Theater name" value="{{ctx.title}}">
        </div>
        <div>
            <label for="description">Theater Description:</label>
            <textarea id="description" name="description" placeholder="Description">{{ctx.description}}</textarea>
        </div>
        <div>
            <label for="imageUrl">Image url:</label>
            <input id="imageUrl" name="imageUrl" type="text" placeholder="Image Url" value="{{ctx.imageUrl}}">
        </div>
        <div class="check">
            {{#if ctx.isPublic}}
                <input name="isPublic" type="checkbox" id="check-box" checked>
            {{else}}
                <input name="isPublic" type="checkbox" id="check-box">
            {{/if}}
            <label for="check-box">Public</label>
        </div>
        <button class="btn" type="submit">Submit</button>
    </form>
</main>
